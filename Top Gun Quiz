#Question 1
print("Question 1: What plane did Goose die in?")
print("a. F-15 strike eagle")
print("b. F-18 super hornet")
print("c. Mig-17")
print("d. F-14 Tomcat")

q1_ans = input("your answer")

if q1_ans=="D" or q1_ans== 'd':
    print("Correct")
else:
    print("incorrect")
    
print("")

